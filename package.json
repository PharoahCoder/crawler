{
  "name": "gt-schedule-crawler",
  "version": "1.0.0",
  "scripts": {
    "start": "ts-node src/index.ts",
    "start-logged": "logfile=\"$(date --iso-8601=seconds).log\"; echo \"Logging to '$logfile'\"; LOG_FORMAT=json ts-node src > \"$logfile\" 2>&1; echo 'Done'",
    "gen-parser": "ts-node scripts/gen-parser.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint--ext .js,.ts . --fix",
    "format": "prettier \"**/*.{js,ts,md,json,yaml}\" --write",
    "format:check": "prettier \"**/*.{js,ts,md,json,yaml}\" --check"
  },
  "dependencies": {
    "antlr4ts": "^0.5.0-alpha.3",
    "axios": "^0.27.2",
    "exponential-backoff": "^3.1.0",
    "fast-safe-stringify": "^2.0.8",
    "tiny-async-pool": "^2.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@tsconfig/node16-strictest": "^1.0.3",
    "@types/node": "^18.6.3",
    "@types/tiny-async-pool": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "antlr4ts-cli": "^0.5.0-alpha.3",
    "chalk": "^4",
    "eslint": "^8.21.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.2",
    "husky": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "eslint"
    ],
    "**/*.{js,ts,md,json,yaml}": [
      "prettier --write"
    ]
  }
}
